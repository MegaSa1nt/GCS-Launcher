{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173"
  },
  "bundle": {
    "active": true,
    "shortDescription": "Лаунчер для GreenCatsServer.",
    "longDescription": "Лаунчер для GreenCatsServer.",
    "copyright": "GreenCatsServer",
    "publisher": "MegaSa1nt, GreenCatsServer",
    "icon": [
      "icons/lil.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper",
        "silent": false
      },
      "nsis": {
        "installerIcon": "icons/updater.ico",
        "languages": [
          "English"
        ],
        "displayLanguageSelector": false
      },
      "allowDowngrades": false
    },
    "targets": ["nsis"],
	"resources": ["./bin/hpatch.exe", "./updater.exe"]
  },
  "productName": "GCS-Launcher",
  "mainBinaryName": "launcher",
  "version": "2.1.0",
  "identifier": "sa1nt.gcs",
  "plugins": {},
  "app": {
    "windows": [
      {
		"label": "main",
        "fullscreen": false,
        "height": 500,
        "resizable": false,
        "decorations": false,
        "title": "Лаунчер GreenCatsServer",
        "width": 800,
        "center": true,
        "theme": "Dark",
        "additionalBrowserArgs": "--disable-features=msWebOOUI,msPdfOOUI,msSmartScreenProtection",
        "transparent": true,
        "useHttpsScheme": true,
		"visible": false
      }
    ],
	"withGlobalTauri": true,
    "security": {
      "csp": null
    }
  }
}